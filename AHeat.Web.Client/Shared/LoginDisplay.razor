@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

<AuthorizeView>
    <Authorized>
        <MudText Class="mr-12" Typo="Typo.h6" GutterBottom="true">Hello, @GetFullName(context.User)</MudText>
        <MudIconButton Title="Log out" Icon="@Icons.Material.Filled.Logout" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => BeginLogOut())" />
    </Authorized>
    <NotAuthorized>

        <MudIconButton Icon="@Icons.Material.Filled.Login" Color="Color.Inherit"
                       Href="authentication/login" />
    </NotAuthorized>
</AuthorizeView>
