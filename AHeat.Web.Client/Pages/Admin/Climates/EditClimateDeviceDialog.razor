<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.AddLocation" Class="mr-3 mb-n1" />
            @MudDialog!.Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@climateDevice.Name" Label="Name" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Success" OnClick="Save">Save</MudButton>
    </DialogActions>

</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }

    [Parameter] public ClimateDeviceDto climateDevice { get; set; } = new ClimateDeviceDto();

    private void Cancel()
    {
        MudDialog!.Cancel();
    }

    private void Save()
    {
        MudDialog!.Close(DialogResult.Ok(climateDevice));
    }

}
