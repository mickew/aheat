@page "/admin/roles"
@attribute [Authorize(Permissions.ViewUsers | Permissions.ManageUsers)]

<PageTitle>Roles</PageTitle>

<MudDataGrid Items="@Roles">
    <Columns>
        <PropertyColumn Property="x => x.Name" Title="Role" />
        <TemplateColumn CellClass="d-flex justify-end">
            <CellTemplate>
                <MudStack Row>
                    <MudButton StartIcon="@Icons.Material.Filled.Edit" @onclick="() => AddEditRole(context.Item)" Size="@Size.Small" Variant="@Variant.Filled" Color="@Color.Primary">Edit</MudButton>
                    <MudButton StartIcon="@Icons.Material.Filled.Delete" @onclick="() => DeleteRole(context.Item)" Size="@Size.Small" Variant="@Variant.Filled" Color="@Color.Warning">Delete</MudButton>
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>
<div class="d-flex flex-wrap mt-4 justify-end">
    <MudButton StartIcon="@Icons.Material.Filled.Add" @onclick="() => AddEditRole(new RoleDto())" Size="@Size.Small" Variant="@Variant.Filled" Color="@Color.Success">Add</MudButton>
</div>