
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.AddLocation" Class="mr-3 mb-n1" />
            Add Role!
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@role.Name" Label="Role Name" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Success" OnClick="SaveRole">Save</MudButton>
    </DialogActions>

</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }

    [Parameter] public RoleDto role { get; set; } = new RoleDto();

    private void Cancel()
    {
        MudDialog!.Cancel();
    }

    private void SaveRole()
    {
        MudDialog!.Close(DialogResult.Ok(role));
    }

}
